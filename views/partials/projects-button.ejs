<style>
  .view-btn {
    --width: 250px;
    --height: 55px;
    --button-color: #1163ff;
    width: var(--width);
    height: var(--height);
    background: var(--button-color);
    position: relative;
    text-align: center;
    border-radius: 0.45em;
    font-family: "Arial";
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .view-btn-text {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .view-btn-wrapper {
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 100%;
    left: 0;
  }

  .view-btn-text,
  .view-btn-icon {
    overflow: hidden;
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
  }

  .view-btn-text {
    top: 0;
  }

  .view-btn-text,
  .view-btn-icon {
    transition: top 0.3s ease;
  }

  .view-btn-icon {
    color: #fff;
    top: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .view-btn:hover {
    background: #8347ff;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(111, 44, 244, 0.3);
  }

  .view-btn:hover .view-btn-text {
    top: -100%;
  }

  .view-btn:hover .view-btn-icon {
    top: 0;
  }
</style>

<a href="<%= projectLink %>" class="arrow-button">
  <button class="view-btn">
    <div class="view-btn-wrapper">
      <div class="view-btn-text">View Project</div>
      <span class="view-btn-icon">
        <span
          class="iconify"
          data-icon="eva:diagonal-arrow-right-up-outline"
          width="48"
          height="48"
        ></span>
      </span>
    </div>
  </button>
</a>
