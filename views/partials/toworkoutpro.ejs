<style>
    .view-btn {
      --width: min(16vw, 236px);
      --height: min(5vh, 57px);
      --button-color: #45a049;
      width: var(--width);
      height: var(--height);
      background: var(--button-color);
      position: relative;
      text-align: center;
      border-radius: 0.45rem;
      font-family: "Arial";
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
    }
  
    .view-btn-text {
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1rem;
    }
  
    .view-btn-wrapper {
      overflow: hidden;
      position: relative;
      width: 100%;
      height: 100%;
      left: 0;
    }
  
    .view-btn-text,
    .view-btn-icon {
      overflow: hidden;
      position: absolute;
      width: 100%;
      height: 100%;
      left: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fff;
    }
  
    .view-btn-text {
      top: 0;
    }
  
    .view-btn-text,
    .view-btn-icon {
      transition: top 0.3s ease;
    }
  
    .view-btn-icon {
      color: #fff;
      top: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  
    .view-btn:hover {
      background: #8347ff;
      transform: translateY(-0.125rem);
      box-shadow: 0 0.313rem 0.938rem rgba(111, 44, 244, 0.3);
    }
  
    .view-btn:hover .view-btn-text {
      top: -100%;
    }
  
    .view-btn:hover .view-btn-icon {
      top: 0;
    }
  
    .card-body {
      position: relative;
      padding-bottom: 4.375rem !important;
    }
  
    
  
    /* Add responsive breakpoints */
    @media (max-width: 768px) {
      .view-btn {
        --width: min(40vw, 236px);
        --height: min(6vh, 57px);
      }
      
      .view-btn-text {
        font-size: 0.875rem;
      }
      
      .view-btn-icon .iconify {
        width: 2rem;
        height: 2rem;
      }
    }
  
    @media (max-width: 480px) {
      .view-btn {
        --width: min(60vw, 236px);
        --height: min(5vh, 57px);
      }
      
      .view-btn-text {
        font-size: 0.75rem;
      }
      
      .view-btn-icon .iconify {
        width: 1.5rem;
        height: 1.5rem;
      }
    }
  </style>
  
  <div class="button-wrapper ms-3">
    <a href="<%= projectLink %>" target="_blank" class="arrow-button">
      <button class="view-btn">
        <div class="view-btn-wrapper">
          <div class="view-btn-text">Workoutpro.org</div>
          <span class="view-btn-icon">
            <span
              class="iconify"
              data-icon="eva:diagonal-arrow-right-up-outline"
              width="2rem"
              height="2rem"
            ></span>
          </span>
        </div>
      </button>
    </a>
  </div>
  