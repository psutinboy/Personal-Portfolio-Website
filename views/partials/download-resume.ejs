<style>
  .download-btn {
    --width: min(16vw, 236px);
    --height: min(7vh, 57px);
    --button-color: #1163ff;
    width: var(--width);
    height: var(--height);
    background: var(--button-color);
    position: relative;
    text-align: center;
    border-radius: 0.45rem;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .download-btn-text {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
  }

  .download-btn-wrapper {
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 100%;
    left: 0;
  }

  .download-btn-text,
  .download-btn-icon {
    overflow: hidden;
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
  }

  .download-btn-text {
    top: 0;
  }

  .download-btn-text,
  .download-btn-icon {
    transition: top 0.3s ease;
  }

  .download-btn-icon {
    color: #fff;
    top: 100%;
  }

  .download-btn:hover {
    background: #8347ff;
    transform: translateY(-0.125rem);
    box-shadow: 0 0.313rem 0.938rem rgba(111, 44, 244, 0.3);
  }

  .download-btn:hover .download-btn-text {
    top: -100%;
  }

  .download-btn:hover .download-btn-icon {
    top: 0;
  }

  /* File size tooltip */
  .download-btn-wrapper::before {
    position: absolute;
    content: "Size: 65kb";
    width: 5.625rem;
    height: 2.1875rem;
    background-color: #cccccc;
    font-size: 0.9rem;
    color: #000;
    border-radius: 0.25rem;
    line-height: 2.1875rem;
    bottom: 5.1875rem;
    left: calc(50% - 2.8125rem);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1;
  }

  [data-theme="dark"] .download-btn-wrapper::before {
    background-color: #2d3238;
    color: #fff;
  }

  .download-btn-wrapper::after {
    position: absolute;
    content: "";
    width: 0;
    height: 0;
    border: 0.625rem solid transparent;
    border-top-color: #cccccc;
    left: calc(50% - 0.625rem);
    bottom: 4.375rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1;
  }

  [data-theme="dark"] .download-btn-wrapper::after {
    border-top-color: #2d3238;
  }

  .download-btn:hover .download-btn-wrapper::before,
  .download-btn:hover .download-btn-wrapper::after {
    opacity: 1;
    visibility: visible;
  }

  .download-btn:hover .download-btn-wrapper::after {
    bottom: 3.75rem;
  }

  .download-btn:hover .download-btn-wrapper::before {
    bottom: 4.375rem;
  }

  /* Add responsive breakpoints */
  @media (max-width: 768px) {
    .download-btn {
      --width: min(40vw, 236px);
      --height: min(6vh, 57px);
    }

    .download-btn-text {
      font-size: 0.875rem;
    }

    .download-btn-icon .iconify {
      width: 2rem;
      height: 2rem;
    }
  }

  @media (max-width: 480px) {
    .download-btn {
      --width: min(60vw, 236px);
      --height: min(5vh, 57px);
    }

    .download-btn-text {
      font-size: 0.75rem;
    }

    .download-btn-icon .iconify {
      width: 1.5rem;
      height: 1.5rem;
    }
  }
</style>

<a
  href="/files/Resume_LedbetterG.pdf"
  download
  class="text-decoration-none d-inline-block"
>
  <button class="download-btn">
    <div class="download-btn-wrapper">
      <div class="download-btn-text">Download Resume</div>
      <span class="download-btn-icon">
        <span
          class="iconify"
          data-icon="material-symbols:download"
          width="2rem"
          height="2rem"
        ></span>
      </span>
    </div>
  </button>
</a>
