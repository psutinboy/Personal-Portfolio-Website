    <%- include('../partials/nav') %>

    <div class="container my-5">
      <h1 class="display-4 mb-4">JavaFX ATM</h1>

      <section class="mb-5">
        <h2>Description</h2>
        <p class="lead">
          A simple ATM (Automated Teller Machine) simulation built with JavaFX
          and Maven. This application provides basic banking functionality
          including account access, balance checking, deposits, and withdrawals
          for both checking and savings accounts.
        </p>
      </section>

      <%- include('../partials/project-carousel', { images: [ { src:
      '/images/atm/atm1.png', alt: 'ATM Login Screen' }, { src:
      '/images/atm/atm2.png', alt: 'Account Selection' }, { src:
      '/images/atm/atm3.png', alt: 'Checking Account Screen' }, { src:
      '/images/atm/atm4.png', alt: 'Savings Account Screen' } ] }) %>

      <section class="mb-5">
        <h2>Features</h2>
        <div class="card">
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <span
                  class="iconify me-2"
                  data-icon="material-symbols:login"
                ></span>
                Secure login system
              </li>
              <li class="list-group-item">
                <span
                  class="iconify me-2"
                  data-icon="material-symbols:account-balance"
                ></span>
                Checking account management
              </li>
              <li class="list-group-item">
                <span
                  class="iconify me-2"
                  data-icon="material-symbols:savings"
                ></span>
                Savings account management
              </li>
              <li class="list-group-item">
                <span
                  class="iconify me-2"
                  data-icon="material-symbols:payments"
                ></span>
                Deposit functionality
              </li>
              <li class="list-group-item">
                <span
                  class="iconify me-2"
                  data-icon="material-symbols:money"
                ></span>
                Withdrawal functionality
              </li>
              <li class="list-group-item">
                <span
                  class="iconify me-2"
                  data-icon="material-symbols:balance"
                ></span>
                Balance inquiry
              </li>
            </ul>
          </div>
        </div>
      </section>

      <section class="mb-5">
        <h2>Prerequisites</h2>
        <div class="card">
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <span class="iconify me-2" data-icon="logos:java"></span>
                Java 21 or higher
              </li>
              <li class="list-group-item">
                <span class="iconify me-2" data-icon="logos:maven"></span>
                Maven
              </li>
              <li class="list-group-item">
                <span
                  class="iconify me-2"
                  data-icon="simple-icons:javafx"
                ></span>
                JavaFX 21.0.2
              </li>
            </ul>
          </div>
        </div>
      </section>

      <section class="mb-5">
        <h2>Installation</h2>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Building the Project</h5>
            <div class="code-block mt-2">
              <code>mvn clean install</code>
            </div>

            <h5 class="card-title mt-4">Running the Application</h5>
            <div class="code-block mt-2">
              <code>mvn javafx:run</code>
            </div>
          </div>
        </div>
      </section>

      <section class="mb-5">
        <h2>Default Login Credentials</h2>
        <div class="card">
